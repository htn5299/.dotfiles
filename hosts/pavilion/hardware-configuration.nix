    device = "/dev/disk/by-uuid/f3c65aa8-7aad-40b3-bdb7-6be567881088";
    fsType = "ext4";
  };

  swapDevices = [
    { device = "/dev/disk/by-uuid/1a28ef5c-6764-4f90-bfec-c622048f78f0"; }
